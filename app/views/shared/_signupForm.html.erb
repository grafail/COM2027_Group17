<div id="myModal" class="modal fade modalSignup">
  <div class="modal-dialog modal-login">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Member Sign Up</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), validate: true do |f| %>
          <div class="form-group">
            <i class="fa fa-envelope"></i>
            <%= f.text_field(:email,:class=>"form-control",:placeholder=>"Email Address", :validate => true) %>
          </div>
          <div class="form-group">
            <i class="fa fa-lock"></i>
            <%= f.text_field(:password,:class=>"form-control",:placeholder=>"Password", :validate => true) %>
          </div>
          <div class="form-group">
            <i class="fa fa-lock"></i>
            <%= f.text_field(:password_confirmation,:class=>"form-control",:placeholder=>"Password Confirmation", :validate => true) %>
          </div>
          <div class="form-check form-group">
            <%= f.check_box(:isBusiness, :class=>"form-check-input", :checked_value => "true", :unchecked_value => "false") %>
            <%= f.label "Business Account", :class => 'form-check-label' %>
          </div>
          <div class="form-group">
            <%= f.submit("Signup", :class=>"btn btn-primary btn-block btn-lg") %>
          </div>
        <%end %>

      </div>
    </div>
  </div>
</div>