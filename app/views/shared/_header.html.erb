      <li style="color: white; background-color:red;line-height: 62px;font-size: 15px;font-weight: 600;"><%= link_to image_tag('cart.png', :align => "center", :id => "cart", :size => "50x50") + CartController.total_price_cart(session).to_s+'Â£', '/cart/', :style => 'color: white; background-color:red' %></li>
    <% end %>
    <% if user_signed_in? %>


      <div class="dropdown ">
        <button class="dropbtn ">My Profile
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-content dropOverflow">
          <%= link_to "My Profile", '/users/edit' %>
          <a href="#">Link 2</a>
          <a href="#">Link 3</a>
        </div>
      </div>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>

  <% else %>
