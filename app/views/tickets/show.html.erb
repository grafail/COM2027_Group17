<h1>Ticket Details:</h1>

<table id="myEventTable">
  <thead>
  <tr>
    <th></th>
    <th>Ticket Name:</th>
    <th>Ticket Description:</th>
    <th>Price:</th>
    <th>Quantity:</th>
    <th>Event:</th>
    <th></th>
  </tr>
  </thead>

  <tbody style="font-size: 14px">
    <tr>
      <td class = "tableBorder">
        <table>
          <tr>
            <td>
              <div class = "linkButton"><%= link_to 'Edit', edit_ticket_path(@ticket) %></div>
            </td>
          </tr>
          <tr>
            <td>
              <div class = "linkButton"><%= link_to 'Remove', ticket_delete_path(@ticket) %></div>
            </td>
          </tr>
        </table>
      </td>
      <td class = "tableBorder">
        <%= link_to @ticket.name , @ticket %>
      </td>
      <td class = "tableBorder">
        <%= @ticket.description %>
      </td>

      <!-- Doing each row for ticket price of an event-->
      <td class = "tableBorder">
        <%=@ticket.price%>
      </td>
      <!-- Doing each row for ticket names of an event-->
      <td class = "tableBorder">
        <% tmp = TicketsController.ticketsRemaining(@ticket) %>
        <%=tmp%>/<%=@ticket.quantity%> <br>
        (<%= number_with_precision((100-100*(tmp.to_f/@ticket.quantity)), :precision => 1) %>% Sold out!)
      </td>
      <!-- Doing each row for ticket names of an event-->
      <td class = "tableBorder">
        <%= link_to @ticket.event.name , @ticket.event %>
      </td>

      <td class = "tableBorder">
        <%= link_to "View purchases" , ticket_list_path(@ticket) %>
      </td>

    </tr>
  </tbody>
</table>