<div class="container py-3" style="padding-top: 20px;">
  <h1 style="font-size: xx-large;"><%=@event.name%></h1>

  <div class="container event-indiv">
    <div class="row align-items-center" style="padding-top: 10px; text-align: center;">

      <!-- site section -->
      <!-- map with marker, can and should be replaced with picture of event set by user -->
      <div class="col-8">

        <div style='width: 100%; padding-bottom: 20px;'>
          <div id="map" style='width: 100%; height: 375px;'></div>
        </div>

        <script type="text/javascript">
            handler = Gmaps.build('Google');
            handler.buildMap({
                    provider: {
                        zoom: 17,
                        center: new google.maps.LatLng(<%=@event.latitude%>,<%=@event.longitude%>)
                    },
                    internal: {id: 'map'}},

                function(){
                    markers = handler.addMarkers([
                        {
                            lat: <%=@event.latitude%>,
                            lng: <%=@event.longitude%>,
                            infowindow: "<%=@event.name%>"
                        }
                    ]);
                });
        </script>

      </div>

      <div class ="col-4">
        <h2><i class="material-icons">location_on</i><%=@event.location%></h2>
        <p><%=@event.description%></p>
        <p style="font-size: smaller;">Number of people currently looking at this event:<br>
          <i class="material-icons">account_circle</i></p>
      </div>


    </div>

    <!-- Tabs -->
    <div class="row" style="padding-right: 10px; padding-left: 10px;">
      <ul class="nav nav-tabs nav-justified" style="width: 100%; padding-left: 10px; padding-right: 10px; font-size: medium;">
        <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab" href="#description">Description</a></li>
        <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab" href="#ticket-info">Ticket Info</a></li>
        <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab" href="#related">Related Events</a></li>
      </ul>
    </div>

    <!-- Tab content-->
    <div class="row" style="width: 100%; text-align: center; padding-top: 10px; padding-left: 30px; padding-right: 10px;">
      <div class="tab-content" style="width: 100%; font-size: medium;">
        <div class="tab-pane fade show" role="tabpanel" id="description">

          <!-- Location -->
          <div style='width: 100%;'>
            <div id="map2" style='width: 100%; height: 375px;'></div>
          </div>

          <script type="text/javascript">
              handler = Gmaps.build('Google');
              handler.buildMap({
                      provider: {
                          zoom: 17,
                          center: new google.maps.LatLng(<%=@event.latitude%>,<%=@event.longitude%>)
                      },
                      internal: {id: 'map2'}},

                  function(){
                      markers = handler.addMarkers([
                          {
                              lat: <%=@event.latitude%>,
                              lng: <%=@event.longitude%>,
                              infowindow: "<%=@event.name%>"
                          }
                      ]);
                  });
          </script>

        </div>

        <div class="tab-pane fade show" role="tabpanel" id="ticket-info">
          <h3 style="padding-top: 10px;">Ticket Prices</h3>
          <h4>Standard: <%=@event.name%></h4>
          <button class="btn btn-block btn-primary button-color">Buy ticket</button>

          <p>Tickets remaining: </p>
        </div>

        <div class="tab-pane fade show" role="tabpanel" id="related">

          <% @events.each do |event| %>

              <div class="event-box yellow row mb-5" style="padding-top: 20px;">
                <div class="col-md-2 col-sm-3 col-12 text-center">
                  <p><img src="" class="mx-auto img-fluid" alt="product thumbnail"></p>
                </div>
                <div class="col-md-6 col-sm-7 col-6" style="padding-bottom: 20px;">
                  <%= link_to event do %>
                    <h5 style="font-family: 'Domine', serif; font-size: xx-large;"><%= event.name %></h5>
                  <% end %>
                  <p><%= event.description %></p>
                  <p>Ticket price</p>
                </div>
                <div class="col-md-4 col-sm-2 col-6 text-right pl-0">
                  <p class="text-wide text-truncate"><i class="material-icons small">location_on</i>
                    <%= event.location %></p>
                </div>
              </div>
              <br \>
          <% end %>

        </div>
      </div>
    </div>

  </div>
</div>